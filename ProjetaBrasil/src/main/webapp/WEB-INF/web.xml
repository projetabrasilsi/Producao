	</context-param>

	<!-- Carregamento do Hibernate -->
	<listener>
		<listener-class>br.com.projetabrasil.util.AutenticacaoListener</listener-class>
	</listener>
	
	<servlet>
     <servlet-name>DownloadServlet</servlet-name>
     <servlet-class>br.com.projetabrasil.util.DownloadServlet</servlet-class>
</servlet>
<servlet-mapping>
     <servlet-name>DownloadServlet</servlet-name>
     <url-pattern>/download</url-pattern>
</servlet-mapping>

	<!-- Configuração do JSF -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	


	<!-- Map these files with JSF -->
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>/faces/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.faces</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	
	<!-- WEB Service JERSEY -->
	<display-name>br.com.projetabrasil.resource</display-name>
         <servlet>
               <servlet-name>Jersey REST Service</servlet-name>
               <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
               <init-param>
                      <param-name>jersey.config.server.provider.packages</param-name>
                      <param-value>br.com.projetabrasil.resource</param-value>
               </init-param>
               <load-on-startup>1</load-on-startup>
         </servlet>
         <servlet-mapping>
               <servlet-name>Jersey REST Service</servlet-name>
               <url-pattern>/restful/*</url-pattern>
         </servlet-mapping>
	

	<!-- Página Principal -->
	<welcome-file-list>
		<welcome-file>pages/alfapage.xhtml</welcome-file>
	</welcome-file-list>


